---
import { getCollection } from "astro:content";
import Social from "../ui/Social.astro";

const [staticData] = await getCollection("staticData");

const { youtubeIconName, instagramIconName, youtube, instagram, profileName } = staticData.data;
---

<footer
	class="w-full h-40 md:h-20 text-slate-950 dark:text-slate-50 border border-slate-500/30 border-b-0 border-x-0 dark:bg-slate-900  "
>
<div class="flex flex-col md:flex-row md:justify-between mx-auto max-w-7xl align-middle items-center gap-2 py-4 px-2">

	<h3 class="text-2xl font-bold">{profileName}</h3>
	<p>Developed by developer name</p>
	
	<ul class="flex gap-2 items-center text-slate-950 dark:text-slate-50">
		<li>
			<Social iconName={instagramIconName} link={instagram} />
		</li>
		<li>
			<Social iconName={youtubeIconName} link={youtube} />
		</li>
	</ul>
</div>
</footer>
