---
import { getCollection } from "astro:content";
import Social from "../ui/Social.astro";

const [staticData] = await getCollection("staticData");

const { youtubeIconName, instagramIconName, youtube, instagram, profileName } = staticData.data;
---

<footer
	class="flex flex-col md:flex-row md:justify-between  items-center gap-2 border border-slate-500/30 border-b-0 border-x-0 dark:bg-slate-900 w-full h-40 md:h-20 py-4 px-1 md:px-16 lg:px-52"
>
	<h3 class="text-2xl font-bold mb-2">{profileName}</h3>
	<p>Developed by</p>

	<ul class="flex gap-2 items-center">
		<li>
			<Social iconName={youtubeIconName} link={youtube} />
		</li>
		<li>
			<Social iconName={instagramIconName} link={instagram} />
		</li>
	</ul>
</footer>
