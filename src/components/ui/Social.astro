---
import { Icon } from 'astro-icon/components';

interface Props {
  iconName: string;
  link: string;
  label?: string;
}

const { iconName, link, label = `Link to ${iconName}` } = Astro.props;

// Validate required props
if (!iconName || !link) {
  throw new Error('Social component requires both iconName and link props');
}
---

<a
  class='hover:text-mint-300 inline-block transition-all hover:scale-150'
  target='_blank'
  href={link}
  rel='noopener noreferrer'
  aria-label={label}
>
  <Icon class='size-5' name={iconName} title={iconName} aria-hidden='true' />
</a>
